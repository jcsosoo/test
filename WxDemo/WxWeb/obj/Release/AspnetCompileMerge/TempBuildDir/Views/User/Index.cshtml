
@{
    ViewBag.Title = "Index";
    Layout =null;
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<table>
    <tr>
       <td>用户名：</td>
       <td><input  id="UserName"/></td>
    </tr>
    <tr>
        <td>用户密码：</td>
        <td><input id="UserPassword" /></td>
    </tr>
    <tr>
        <td>身份证号：</td>
        <td><input id="CardNum" /></td>
    </tr>
    <tr>
        <td>电话：</td>
        <td><input id="Phone" /></td>
    </tr>
    <tr>
        <td>地址：</td>
        <td><input id="Address" /></td>
    </tr>
</table>
<button id="Push">注册</button>
<script>
    $("#Push").click(function () {
        $.ajax({
            url: "/User/RegisterUser",
            data:{UserName:$("#UserName").val(),UserPassword:$("#UserPassword").val(),
                Phone: $("#Phone").val(), Address: $("#Address").val(), CardNum: $("#CardNum").val(), UserId:sessionStorage.getItem("userid")
            },
            success: function (data) {
                alert("注册成功");
            }
        })
 })
 
</script>

